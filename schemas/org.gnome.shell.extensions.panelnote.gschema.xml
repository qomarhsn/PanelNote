<?xml version="1.0" encoding="UTF-8"?>
<schemalist>

  <schema id="org.gnome.shell.extensions.panelnote" path="/org/gnome/shell/extensions/panelnote/">

    <!-- See also: https://developer.gnome.org/glib/stable/gvariant-format-strings.html -->

    <key type="s" name="note">
      <default>"Change my Panel Note!"</default>
      <summary>The note that is showing on the panel.</summary>
    </key>

    <key name="enable-positioning" type="b">
      <default>false</default>
      <summary>Enable custom positioning in the panel</summary>
    </key>

    <key type="i" name="position">
      <default>2</default>
      <summary>Panel position (0=left, 1=center, 2=right)</summary>
    </key>

    <key type="i" name="position-number">
      <default>0</default>
      <summary>Order index within the selected panel box</summary>
    </key>
  </schema>
</schemalist>
